<div>
  <%= flash[:notice] %>
</div>



<%= render 'users/list', book: @book,user: @user %>

  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

  <table class="table">
  <tbody>
  <tr>
    <td>
      <%= link_to user_path(@user.id) do %>
      <%= image_tag @book1.user.get_profile_image(100,100) %>
      <br><%= @user.name %>
      <% end %>
    </td>
    <td>
      <%= link_to @book1.title, book_path(@book1.id) %>
    </td>
    <td>
      <%= @book1.body %>
    </td>
    <td>
     <% if @book1.user == current_user %>
     <%= link_to 'Edit',edit_book_path(@book1.id), class: "btn btn-sm btn-success edit_book_68799" %>
     <% end %>
    </td>
    <td>
     <% if @book1.user == current_user %>
     <%= link_to 'Destroy',"/books/#{@book1.id}", method: :delete, class: "btn btn-sm btn-danger destroy_book_68799", data: { confirm: "本当に消しますか？" } %>
     <% end %>
    </td>
  </tr>
  </tbody>
</table>
</div>
</div>
</div>
</main>
